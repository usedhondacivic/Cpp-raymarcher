{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with Mingw",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "Main.cpp",
                "glad.c",
                "-I../mingw_dev_lib/include",
                "-L../mingw_dev_lib/lib",
                "-lmingw32",
                "-lglfw3dll",
                "-lOpenGL32",
                "-o",
                "Main",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build with Clang",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "Main.cpp",
                "-o",
                "Main.out",
                "--debug"
            ],
            "group": "build"
        }
    ]
}
